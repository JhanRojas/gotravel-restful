<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Origen</th>
      <th>Destino</th>
      <th>Partida</th>
      <th>Regreso</th>
      <th>Adultos</th>
      <th>Menores</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.origen %></td>
        <td><%= flight.destino %></td>
        <td><%= flight.partida %></td>
        <td><%= flight.regreso %></td>
        <td><%= flight.adultos %></td>
        <td><%= flight.menores %></td>
        <td><%= flight.precio %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

