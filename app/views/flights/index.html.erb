<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Origin country</th>
      <th>Origin state</th>
      <th>Origin city</th>
      <th>Destination country</th>
      <th>Destination state</th>
      <th>Destination city</th>
      <th>Departure</th>
      <th>Returning</th>
      <th>Adults</th>
      <th>Minor</th>
      <th>Price</th>
      <th>Airline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.origin_country %></td>
        <td><%= flight.origin_state %></td>
        <td><%= flight.origin_city %></td>
        <td><%= flight.destination_country %></td>
        <td><%= flight.destination_state %></td>
        <td><%= flight.destination_city %></td>
        <td><%= flight.departure %></td>
        <td><%= flight.returning %></td>
        <td><%= flight.adults %></td>
        <td><%= flight.minor %></td>
        <td><%= flight.price %></td>
        <td><%= flight.airline.name %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

