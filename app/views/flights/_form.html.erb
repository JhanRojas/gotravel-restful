<%= simple_form_for(@flight) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :origen %>
    <%= f.input :destino %>
    <%= f.input :partida %>
    <%= f.input :regreso %>
    <%= f.input :adultos %>
    <%= f.input :menores %>
    <%= f.input :precio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
