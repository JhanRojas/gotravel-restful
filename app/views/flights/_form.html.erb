<%= simple_form_for @flight, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :origin_state %>
  <%= error_span(@flight[:origin_state]) %>
  <%= f.input :origin_city %>
  <%= error_span(@flight[:origin_city]) %>
  <%= f.input :destination_state %>
  <%= error_span(@flight[:destination_state]) %>
  <%= f.input :destination_city %>
  <%= error_span(@flight[:destination_city]) %>
  <%= f.input :departure %>
  <%= error_span(@flight[:departure]) %>
  <%= f.input :returning %>
  <%= error_span(@flight[:returning]) %>
  <%= f.input :adult_price %>
  <%= error_span(@flight[:adult_price]) %>
  <%= f.input :minor_price %>
  <%= error_span(@flight[:minor_price]) %>
  <%= f.input :capacity %>
  <%= error_span(@flight[:capacity]) %>
  <%= f.input :airline_id %>
  <%= error_span(@flight[:airline_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                flights_path, :class => 'btn btn-default' %>
<% end %>
