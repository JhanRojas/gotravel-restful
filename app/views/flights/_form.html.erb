<%= simple_form_for @flight, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :origen %>
  <%= error_span(@flight[:origen]) %>
  <%= f.input :destino %>
  <%= error_span(@flight[:destino]) %>
  <%= f.input :partida %>
  <%= error_span(@flight[:partida]) %>
  <%= f.input :regreso %>
  <%= error_span(@flight[:regreso]) %>
  <%= f.input :adultos %>
  <%= error_span(@flight[:adultos]) %>
  <%= f.input :menores %>
  <%= error_span(@flight[:menores]) %>
  <%= f.input :precio %>
  <%= error_span(@flight[:precio]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                flights_path, :class => 'btn btn-default' %>
<% end %>
