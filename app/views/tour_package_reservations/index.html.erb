<%- model_class = TourPackageReservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user ) %></th>
      <th><%= model_class.human_attribute_name(:tour_package ) %></th>
      
     
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% @tour_package_reservations.each do |tour_package_reservation| %>
      <tr>
        <td><%= link_to tour_package_reservation.id, tour_package_reservation_path(tour_package) %></td>
        
       
       
        <td><%= tour_package.user.name %></td>
        <td><%= tour_package.tour_packaget.title %></td>
        
       
    
        <td>
         
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tour_package_reservation, :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tour_package_reservation_path(tour_package_reservation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tour_package_reservation_path(tour_package_reservation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tour_package_reservation_path,
            :class => 'btn btn-primary' %>
