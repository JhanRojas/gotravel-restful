<%= simple_form_for @hotel, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@hotel[:name]) %>
  <%= f.input :description %>
  <%= error_span(@hotel[:description]) %>
  <%= f.input :starts %>
  <%= error_span(@hotel[:starts]) %>
  <%= f.input :address %>
  <%= error_span(@hotel[:address]) %>
  <%= f.input :location_coordinates %>
  <%= error_span(@hotel[:location_coordinates]) %>
  <%= f.input :phone %>
  <%= error_span(@hotel[:phone]) %>
  <%= f.input :raiting %>
  <%= error_span(@hotel[:raiting]) %>
  <%= f.input :country %>
  <%= error_span(@hotel[:country]) %>
  <%= f.input :state %>
  <%= error_span(@hotel[:state]) %>
  <%= f.input :city %>
  <%= error_span(@hotel[:city]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hotels_path, :class => 'btn btn-default' %>
<% end %>
