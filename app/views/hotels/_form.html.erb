<%= simple_form_for(@hotel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :phone_numer %>
    <%= f.input :raiting %>
    <%= f.input :gps_coordinates %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
