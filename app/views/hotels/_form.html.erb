<%= simple_form_for(@hotel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :starts %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :location_coordinates %>
    <%= f.input :phone %>
    <%= f.input :raiting %>
    <%= f.association :locations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
