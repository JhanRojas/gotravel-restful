<p id="notice"><%= notice %></p>

<h1>Listing Hotels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starts</th>
      <th>Address</th>
      <th>City</th>
      <th>Location coordinates</th>
      <th>Phone</th>
      <th>Raiting</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.starts %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.city %></td>
        <td><%= hotel.location_coordinates %></td>
        <td><%= hotel.phone %></td>
        <td><%= hotel.raiting %></td>
        <td><%= hotel.country %></td>
        <td><%= hotel.state %></td>
        <td><%= hotel.city %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
