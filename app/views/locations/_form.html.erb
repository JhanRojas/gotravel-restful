<%= simple_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :country %>
  <%= error_span(@location[:country]) %>
  <%= f.input :state %>
  <%= error_span(@location[:state]) %>
  <%= f.input :city %>
  <%= error_span(@location[:city]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn btn-default' %>
<% end %>
