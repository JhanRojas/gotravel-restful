<%= simple_form_for @room, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :type %>
  <%= error_span(@room[:type]) %>
  <%= f.input :description %>
  <%= error_span(@room[:description]) %>
  <%= f.input :number_people %>
  <%= error_span(@room[:number_people]) %>
  <%= f.input :price %>
  <%= error_span(@room[:price]) %>
  <%= f.input :hotels_id %>
  <%= error_span(@room[:hotels_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn btn-default' %>
<% end %>
