<%= simple_form_for(@room) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :room_type %>
    <%= f.input :description %>
    <%= f.input :number_people %>
    <%= f.input :price %>
    <%= f.association :hotel %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
