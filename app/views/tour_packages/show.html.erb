<%- model_class = TourPackage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:origin) %>:</strong></dt>
  <dd><%= @tour_package.origin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination) %>:</strong></dt>
  <dd><%= @tour_package.destination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure) %>:</strong></dt>
  <dd><%= @tour_package.departure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:returnning) %>:</strong></dt>
  <dd><%= @tour_package.returnning %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hotel) %>:</strong></dt>
  <dd><%= @tour_package.hotel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restaurant) %>:</strong></dt>
  <dd><%= @tour_package.restaurant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
  <dd><%= @tour_package.place %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tour_packages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tour_package_path(@tour_package), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tour_package_path(@tour_package),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
