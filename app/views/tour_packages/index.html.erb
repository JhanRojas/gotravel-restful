<%- model_class = TourPackage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Flight) %></th>
      <th><%= model_class.human_attribute_name(:Hotel) %></th>
      <th><%= model_class.human_attribute_name(:Restaurant) %></th>
      <th><%= model_class.human_attribute_name(:Place) %></th>
     
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% @tour_packages.each do |tour_package| %>
      <tr>
        <td><%= link_to tour_package.id, tour_package_path(hotel) %></td>
        <td><%= tour_package.flight %></td>
        <td><%= tour_package.hotel %></td>
        <td><%= tour_package.restaurant %></td>
        <td><%= tour_package.place %></td>
    
        <td>
         
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      hotel, :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_hotel_path(hotel), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      hotel_path(hotel),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tour_package_path,
            :class => 'btn btn-primary' %>
